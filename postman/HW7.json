      "name": "register",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"New user successfully registered (status 201)\", () => {\r",
              "    pm.expect(pm.response.code).to.equal(201);\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Генерация случайного логина\r",
              "function generateRandomUsername() {\r",
              "    const adjectives = [\r",
              "        'happy', 'sunny', 'clever', 'brave', 'swift', 'wise', \r",
              "        'cool', 'smart', 'quick', 'lucky', 'funny', 'crazy',\r",
              "        'epic', 'magic', 'super', 'alpha', 'omega', 'nova'\r",
              "    ];\r",
              "    \r",
              "    const nouns = [\r",
              "        'user', 'player', 'hero', 'coder', 'dev', 'tester',\r",
              "        'admin', 'master', 'ninja', 'wizard', 'knight', 'dragon',\r",
              "        'tiger', 'wolf', 'eagle', 'shark', 'ghost', 'robot'\r",
              "    ];\r",
              "    \r",
              "    const randomNumber = Math.floor(Math.random() * 10000);\r",
              "    \r",
              "    const randomAdj = adjectives[Math.floor(Math.random() * adjectives.length)];\r",
              "    const randomNoun = nouns[Math.floor(Math.random() * nouns.length)];\r",
              "    \r",
              "    return `${randomAdj}_${randomNoun}_${randomNumber}`;\r",
              "}\r",
              "\r",
              "function generatePhone() {\r",
              "    const timestamp = Date.now().toString().slice(-7);\r",
              "    \r",
              "    return `+7916${timestamp}`;\r",
              "}\r",
              "\r",
              "// Телефон\r",
              "const phone = generatePhone();\r",
              "\r",
              "// Логин\r",
              "const username = generateRandomUsername();\r",
              "\r",
              "// email на основе логина\r",
              "const email = `${username}@mail.com`;\r",
              "\r",
              "// Сохраняем в переменные\r",
              "pm.collectionVariables.set(\"user1_uname\", username)\r",
              "pm.collectionVariables.set(\"email\", email)\r",
              "pm.collectionVariables.set(\"phone\", phone)\r",
              "\r",
              "console.log('\\n\\{\\{user1_uname\\}\\} = ', username)\r",
              "console.log('\\n\\{\\{email\\}\\} = ', email)\r",
              "console.log('\\n\\{\\{phone\\}\\} = ', phone)"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
